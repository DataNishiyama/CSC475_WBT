<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csc475.hello.warhammerbattletracker">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/wbt_menu_splash1"
        android:roundIcon="@drawable/wbt_menu_splash"
        android:supportsRtl="true"
        android:theme="@style/Theme.Warhammerbattletracker">
        <activity android:name=".SplashActivity"
            android:exported="true">
            <!-- Configure SplashActivity as the launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <!-- Add the DiceRollActivity -->
        <activity android:name=".DiceRollActivity" />
    </application>

</manifest>






