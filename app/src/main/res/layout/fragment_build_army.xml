<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_text_model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Model Name" />

    <EditText
        android:id="@+id/edit_text_model_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Model Type"
        android:layout_below="@id/edit_text_model_name" />

    <Button
        android:id="@+id/button_add_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Model"
        android:layout_below="@id/edit_text_model_type" />

    <ListView
        android:id="@+id/list_view_army"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_add_model" />
</RelativeLayout>
